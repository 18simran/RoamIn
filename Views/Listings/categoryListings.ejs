<% layout('Layouts/boilerplate') %>
<p class="category-title">
  Category :&nbsp;&nbsp;<%= category %>&nbsp;Listings
</p>
<div
  class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 offset-sm-0 offset-md-0 mt-3 cards-container"
>
  <% for (let list of listings) { %>
  <a href="/listings/listingsall/<%= list._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= list.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= list.title %> </b> <br />
          &#8377; <%= (list.price || 0).toLocaleString("en-IN") %> / night
          <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
