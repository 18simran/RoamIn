<% layout('Layouts/boilerplate') %>
<div class="home-heading mb-5 mt-2">
  <h1>Book unique places to stay and explore new adventures.</h1>
</div>

<div id="homeCarousel" class="carousel slide mt-3" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img
        src="/images/slide1.jpg"
        class="d-block w-100"
        alt="Slide 1"
        style="height: 500px; object-fit: cover"
      />
    </div>
    <div class="carousel-item">
      <img
        src="/images/slide2.png"
        class="d-block w-100"
        alt="Slide 2"
        style="height: 500px; object-fit: cover"
      />
    </div>
    <div class="carousel-item">
      <img
        src="/images/slide3.png"
        class="d-block w-100"
        alt="Slide 3"
        style="height: 500px; object-fit: cover"
      />
    </div>
    <div class="carousel-item">
      <img
        src="/images/slide4.jpg"
        class="d-block w-100"
        alt="Slide 4"
        style="height: 500px; object-fit: cover"
      />
    </div>
    <div class="carousel-item">
      <img
        src="/images/slide5.jpg"
        class="d-block w-100"
        alt="Slide 5"
        style="height: 500px; object-fit: cover"
      />
    </div>
  </div>
  <button
    class="carousel-control-prev"
    type="button"
    data-bs-target="#homeCarousel"
    data-bs-slide="prev"
  >
    <span class="carousel-control-prev-icon"></span>
  </button>
  <button
    class="carousel-control-next"
    type="button"
    data-bs-target="#homeCarousel"
    data-bs-slide="next"
  >
    <span class="carousel-control-next-icon"></span>
  </button>
</div>

<div class="container text-center category-layout">
  <h2 class="mb-2">Explore Top Categories</h2>
  <p class="text-muted mb-5">
    Discover stays, experiences, and essentials curated just for you.
  </p>

  <div class="row justify-content-center">
    <a
      href="/category/SmartStays"
      class="text-decoration-none text-dark col-6 col-sm-4 col-md-2"
    >
      <div class="category-item">
        <img src="/images/slide1.jpg" alt="Watch" class="category-img" />
        <p class="mt-2 fw-medium">Smart Stays</p>
        <small class="text-muted">17 Listings</small>
      </div>
    </a>

    <a
      href="/category/ChicGateways"
      class="text-decoration-none text-dark col-6 col-sm-4 col-md-2"
    >
      <div class="category-item">
        <img src="/images/slide2.png" alt="Fashionista" class="category-img" />
        <p class="mt-2 fw-medium">Chic Getaways</p>
        <small class="text-muted">6 Listings</small>
      </div>
    </a>

    <a
      href="/category/CulturalEscapes"
      class="text-decoration-none text-dark col-6 col-sm-4 col-md-2"
    >
      <div class="category-item">
        <img src="/images/slide3.png" alt="Ethnic Wear" class="category-img" />
        <p class="mt-2 fw-medium">Cultural Escapes</p>
        <small class="text-muted">4 Listings</small>
      </div>
    </a>

    <a
      href="/category/ScenicViews"
      class="text-decoration-none text-dark col-6 col-sm-4 col-md-2"
    >
      <div class="category-item">
        <img src="/images/slide4.jpg" alt="Goggles" class="category-img" />
        <p class="mt-2 fw-medium">Scenic Views</p>
        <small class="text-muted">10 Listings</small>
      </div>
    </a>

    <a
      href="/category/AdventureGear"
      class="text-decoration-none text-dark col-6 col-sm-4 col-md-2"
    >
      <div class="category-item">
        <img src="/images/slide5.jpg" alt="Tote Bag" class="category-img" />
        <p class="mt-2 fw-medium">Adventure Gear</p>
        <small class="text-muted">4 Listings</small>
      </div>
    </a>
  </div>
</div>
